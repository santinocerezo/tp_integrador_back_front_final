<%- include("partials/head") %>
<%- include("partials/nav") %>

<main class="container">
  <h1>Modificar producto</h1>

  <form id="formBuscarUpdate">
    <label>ID producto</label>
    <input type="number" id="idUpdate" required min="1">
    <button type="submit">Buscar</button>
  </form>

  <form id="formUpdate" style="margin-top:20px; display:none;">
    <input type="hidden" id="idProductoUpdate">

    <div>
      <label>Nombre</label>
      <input type="text" id="nombreUpdate" required>
    </div>

    <div>
      <label>Tipo</label>
      <select id="tipoUpdate" required>
        <option value="SERVICIO">SERVICIO</option>
        <option value="PRODUCTO">PRODUCTO</option>
      </select>
    </div>

    <div>
      <label>Precio</label>
      <input type="number" id="precioUpdate" required min="0">
    </div>

    <div>
      <label>URL imagen</label>
      <input type="text" id="imagenUpdate" required>
    </div>

    <div>
      <label>Activo</label>
      <select id="activoUpdate">
        <option value="1">Activo</option>
        <option value="0">Inactivo</option>
      </select>
    </div>

    <button type="submit">Guardar cambios</button>
  </form>

  <p id="msgUpdate"></p>
</main>

<script src="/js/update.js"></script>
<%- include("partials/footer") %>
